<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PosterDetail">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">@dimen/margin_view</item>
    </style>
    <style name="TitleStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">34dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">34dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>
   <style name="ItemTextStyle">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginStart">@dimen/margin_8dp</item>
       <item name="android:layout_marginTop">@dimen/margin_8dp</item>
       <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
       <item name="android:background">@drawable/bg_card</item>
       <item name="android:gravity">center_horizontal</item>
       <item name="android:padding">@dimen/margin_view</item>
       <item name="android:textAllCaps">true</item>
       <item name="android:textSize">20sp</item>
       <item name="android:textStyle">bold</item>
   </style>
    <style name="StyleViewDetailMovie">
        <item name="android:layout_width">@dimen/width_view_detail_movie</item>
        <item name="android:layout_height">@dimen/height_view_detail_movie</item>
    </style>
    <style name="CardViewDetail" parent="CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_view</item>
        <item name="android:layout_marginTop">@dimen/margin_view</item>
        <item name="android:layout_marginEnd">@dimen/margin_view</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="OverviewTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_view</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="DetailTextTv" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextDetailTv" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="TextTableRowLeft" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextTableRowRight" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ViewBackgroundDiagonal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:background">@drawable/bg_header</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TableRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
</resources>