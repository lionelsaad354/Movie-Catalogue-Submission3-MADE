<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/gradient_yellow"/>
    <item>
        <bitmap android:src="@drawable/icon_movie" android:gravity="top" android:alpha="0.2"/>
    </item>

    <item android:top="200dp"
        android:bottom="-100dp"
        android:left="-300dp"
        android:right="0dp">
        <rotate
            android:fromDegrees="20"
            android:pivotX="60%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="?android:colorBackground"/>
            </shape>
        </rotate>
    </item>
</layer-list>